<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0099cc "
    tools:context="com.homemanager.HomeManager"
    android:soundEffectsEnabled="true">


    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"><![CDATA[
        android:fitsSystemWindows="true"
        android:soundEffectsEnabled="true">
        ]]>

        <RelativeLayout
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.9"
            android:background="#9E9696"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/tempIn"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_gravity="left"
                app:srcCompat="@drawable/homedecoration" />

            <TextView
                android:id="@+id/tempInText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tempIn"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                tools:text="@string/emptyTempText" />

            <ImageView
                android:id="@+id/tempOut"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_toRightOf="@id/tempInText"
                app:srcCompat="@drawable/outdoor" />
            <!--android:layout_below="@id/tempModeImage" -->

            <!--
                            android:layout_toRightOf="@id/tempOut"
                            android:layout_below="@id/temperature"
            -->

            <TextView
                android:id="@+id/tempOutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@id/tempOut"
                android:text=""
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                tools:text="@string/emptyTempText" />

            <ImageView
                android:id="@+id/tempModeImage"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/day" />

            <ImageView
                android:id="@+id/alarmStateImage"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="left"
                android:layout_toRightOf="@id/tempModeImage"
                android:visibility="visible"
                app:srcCompat="@drawable/alarm" />

            <ImageView
                android:id="@+id/energyModeImage"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="left"
                android:layout_toRightOf="@id/alarmStateImage"
                app:srcCompat="@drawable/battery" />

            <TextView
                android:id="@+id/energy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="start"
                android:layout_toRightOf="@id/energyModeImage"
                android:singleLine="false"
                android:text=""
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="14sp" />

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/status"
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:alpha="0.9"
            android:background="#9E9696"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:soundEffectsEnabled="true">


            <TableRow
                android:layout_width="297dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="10dp">

                <ImageButton
                    android:id="@+id/imageGate"
                    android:layout_width="109dp"
                    android:layout_height="56dp"
                    android:alpha="0.8"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@drawable/gate" />


                <ImageButton
                    android:id="@+id/imageGate1"
                    android:layout_width="110dp"
                    android:layout_height="56dp"
                    android:alpha="0.8"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@drawable/gate1" />

                <ImageButton
                    android:id="@+id/imageDoor"
                    android:layout_width="108dp"
                    android:layout_height="56dp"
                    android:alpha="0.8"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@drawable/door" />
            </TableRow>

            <TableRow
                android:layout_width="290dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/gateText" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/gate1Text" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/Furtka" />
            </TableRow>


            <TableRow
                android:layout_width="297dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="10dp">

                <ImageButton
                    android:id="@+id/imageSprinkler"
                    android:layout_width="109dp"
                    android:layout_height="56dp"
                    android:alpha="0.8"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@drawable/garden" />


                <ImageButton
                    android:id="@+id/imageHeater"
                    android:layout_width="110dp"
                    android:layout_height="56dp"
                    android:alpha="0.8"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@drawable/piec" />

                <ImageButton
                    android:id="@+id/imageAlarm"
                    android:layout_width="108dp"
                    android:layout_height="56dp"
                    android:alpha="0.8"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@drawable/alarm" />
            </TableRow>

            <TableRow
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/gardenText" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/heatText" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/alarmText" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="10dp">

                <ImageButton
                    android:id="@+id/imageMedia"
                    android:layout_width="109dp"
                    android:layout_height="56dp"
                    android:alpha="0.8"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@drawable/media" />


                <ImageButton
                    android:id="@+id/imageControl"
                    android:layout_width="110dp"
                    android:layout_height="56dp"
                    android:alpha="0.8"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@drawable/control" />

                <ImageButton
                    android:id="@+id/imageInfo"
                    android:layout_width="108dp"
                    android:layout_height="56dp"
                    android:alpha="0.8"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@drawable/info" />
            </TableRow>

            <TableRow
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/mediaText" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ctrlText" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/infoText" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="10dp">

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="421dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent" />

        <TableLayout
            android:id="@+id/News"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:alpha="0.9"
            android:background="#9E9696"
            android:gravity="bottom|center_horizontal"
            android:stretchColumns="*" />

    </RelativeLayout>

</RelativeLayout>